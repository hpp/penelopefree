<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen  xmlns:android="http://schemas.android.com/apk/res/android"
	android:title="@string/special_effects">
	<com.harmonicprocesses.penelopefree.settings.SeekBarPreference
		android:key="just_a_spacer"
		android:title=""
		android:summary=""
		android:dialogMessage=""
		android:defaultValue=""
		android:text=""
		android:max="0"/>
	<PreferenceCategory 
	    android:title="@string/standard_effects">
		<com.harmonicprocesses.penelopefree.settings.SeekBarPreference
			android:key="sound_wet_dry_key"
			android:title="@string/wet_dry_ratio"
			android:summary="@string/wet_dry_ratio_summary"
			android:dialogMessage="@string/wet_dry_ratio_dialog"
			android:defaultValue="92"
			android:text="@string/wet_dry_ratio_text"
			android:max="100"/>
		<CheckBoxPreference 
		    android:key="enable_tone_generator_key"
		    android:title="@string/enable_tone_generator"
		    android:summary="@string/enable_tone_generator_description"
			android:defaultValue="false"/>
		<CheckBoxPreference
			android:key="enable_reverb_key"
			android:title="@string/enable_reverb"
			android:defaultValue="false"/>
	</PreferenceCategory>
	<PreferenceCategory 
	    android:title="@string/premium_effects">
		<CheckBoxPreference 
			android:key="ad_infinitum_key"
			android:title="Ad Infinitum"
			android:summary="@string/full_version_presale"
			android:defaultValue="false"/>
	    <!-- 
		<CheckBoxPreference
			android:key="enable_pitch_correct_key"
			android:id="@+id/enable_pitch_correct"
			android:title="@string/enable_pitch_correct"
			android:defaultValue="false"/>
		<com.harmonicprocesses.penelopefree.settings.SeekBarPreference
			android:key="SEFX_pitch_correct_level"
			android:title="@string/SEFX_pitch_correct"
			android:summary="@string/SEFX_pitch_corrects_summary"
			android:dialogMessage="@string/SEFX_pitch_correct_dialog"
			android:defaultValue="100"
			android:dependency="enable_pitch_correct_key"
			android:text="@string/SEFX_pitch_correct_text"
			android:max="100"/>
		-->
	</PreferenceCategory>
	<PreferenceCategory 
	    android:title="@string/record_effect">
	<ListPreference
        android:key="video_effect_key"
        android:title="@string/record_effect"
        android:dialogTitle="@string/record_effect"
        android:entries="@array/record_effect_entries"
        android:entryValues="@array/record_effect_values"
        android:defaultValue="@string/record_effect_value_default" />
	</PreferenceCategory>
</PreferenceScreen> 